{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Album</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Titlealbum</th>
                <td>{{ album.titleAlbum }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ album.artist }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ album.gender }}</td>
            </tr>
            <tr>
                <th>Support</th>
                <td>{{ album.support }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('album_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('album_edit', { 'id': album.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="form-control btn btn-info" style="width: 20vh">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
{% endblock %}
